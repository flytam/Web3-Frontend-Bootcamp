{
  "name": "hardhat-project",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "hardhat": "^2.22.5"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.2",
    "dotenv": "^16.4.5",
    "ethers": "^6.13.0"
  },
  "scripts": {
    "compile": "hardhat compile",
    "deploy": "hardhat ignition deploy ignition/modules/main.js --network sepolia --deployment-id sepolia-deployment",
    "verify": "hardhat ignition verify sepolia-deployment",
    "buyNFT": "hardhat run scripts/buyNFT.js --network sepolia",
    "listNFT": "hardhat run scripts/listNFT.js --network sepolia",
    "mintNFT": "hardhat run scripts/mintNFT.js --network sepolia"
  }
}
